@model IEnumerable<LHP_Inventory_management_system_MVC.Models.Parts>
@{
    Layout = null; // 移除布局文件，创建独立页面
    ViewData["Title"] = "Inventory Management System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4361ee; /* 現代靛藍色 */
            --secondary-color: #3f37c9;
            --bg-color: #f3f6f9;
            --text-dark: #2b2d42;
            --text-muted: #8d99ae;
            --card-shadow: 0 10px 20px rgba(0,0,0,0.05);
            --hover-shadow: 0 15px 30px rgba(67, 97, 238, 0.15);
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-dark);
            padding: 40px 20px;
            min-height: 100vh;
        }

        /* 容器優化 */
        .first-page-whole-container {
            max-width: 1200px;
            margin: 0 auto;
            background: transparent;
        }

        /* 標題區域 */
        h1.display-4 {
            font-weight: 700;
            color: var(--text-dark);
            font-size: 2.5rem;
            letter-spacing: -0.5px;
            margin-bottom: 0.5rem;
        }

        p.lead {
            color: var(--text-muted);
            font-size: 1.1rem;
            font-weight: 400;
        }

        /* 導航欄優化 */
        .navbar {
            background-color: #ffffff !important;
            border-radius: 16px;
            border: none;
            box-shadow: var(--card-shadow);
            padding: 1rem 1.5rem;
            transition: transform 0.3s ease;
        }

        .btn-outline-primary {
            color: var(--primary-color);
            border-color: #e0e7ff;
            background: #e0e7ff;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover, .btn-outline-primary:active, .btn-outline-primary.show {
                background-color: var(--primary-color);
                border-color: var(--primary-color);
                color: white;
                box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
            }

        /* 下拉選單美化 */
        .dropdown-menu {
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-top: 10px !important;
            padding: 10px;
        }

        .dropdown-item {
            border-radius: 8px;
            padding: 10px 15px;
            font-weight: 500;
            color: var(--text-dark);
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
                color: var(--primary-color);
            }

            .dropdown-item i {
                color: var(--text-muted);
                transition: color 0.2s;
            }

            .dropdown-item:hover i {
                color: var(--primary-color);
            }

        /* 主要按鈕與搜索欄 */
        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            border-radius: 10px;
            padding: 10px 25px;
            font-weight: 600;
            box-shadow: 0 4px 6px rgba(67, 97, 238, 0.2);
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: var(--secondary-color);
                transform: translateY(-2px);
                box-shadow: var(--hover-shadow);
            }

        .form-control {
            border-radius: 10px;
            border: 1px solid #e9ecef;
            padding: 12px 20px;
            background-color: #ffffff;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.1);
            }

        /* 卡片與表格 */
        .card {
            border: none;
            border-radius: 20px;
            box-shadow: var(--card-shadow);
            overflow: hidden;
            background: #ffffff;
        }

        .card-header {
            background-color: #ffffff;
            border-bottom: 1px solid #f1f3f5;
            padding: 20px 30px;
        }

            .card-header h5 {
                color: var(--text-dark);
                font-weight: 700;
                font-size: 1.25rem;
            }

            .card-header i {
                color: var(--primary-color);
                margin-right: 10px;
            }

        .table {
            margin-bottom: 0;
        }

            .table thead th {
                background-color: #f8f9fa;
                color: var(--text-muted);
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.8rem;
                letter-spacing: 0.5px;
                border-bottom: none;
                padding: 15px 20px;
            }

            .table tbody td {
                padding: 20px;
                vertical-align: middle;
                border-bottom: 1px solid #f8f9fa;
                color: var(--text-dark);
                font-size: 0.95rem;
            }

        .table-hover tbody tr {
            transition: background-color 0.2s ease;
        }

            .table-hover tbody tr:hover {
                background-color: #fcfdff;
            }

        /* 狀態標籤 */
        .badge.bg-danger {
            background-color: #ffe5e5 !important;
            color: #d90429;
            font-weight: 600;
            padding: 6px 12px;
            border-radius: 6px;
        }

        /* 表格內按鈕 */
        .btn-group-sm .btn {
            border-radius: 6px;
            margin: 0 2px;
        }

        .btn-outline-danger {
            border-color: #ffe5e5;
            color: #d90429;
            background: #ffe5e5;
        }

            .btn-outline-danger:hover {
                background-color: #d90429;
                border-color: #d90429;
                color: white;
            }

        /* Modal 美化 */
        .modal-content {
            border: none;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
        }

        .modal-header {
            border-bottom: 1px solid #f0f0f0;
            padding: 25px;
        }

        .modal-body, .modal-footer {
            padding: 25px;
        }

        .modal-title {
            font-weight: 700;
        }

        /* 用戶頭像 */
        .navbar img.rounded-circle {
            border: 2px solid #e0e7ff;
            padding: 2px;
        }
    </style>
</head>
<body>
    <div class="first-page-whole-container">
        <!-- 標題部分 -->
        <div class="text-center mb-4">
            <h1 class="display-4">Inventory Management System</h1>
            <p class="lead">Efficiently manage your spare parts inventory</p>
        </div>

        <!-- 導航欄 -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-4">
            <div class="container-fluid">
                <!-- 主菜單 -->
                <div class="d-flex align-items-center">
                    <div class="dropdown main-menu-dropdown">
                        <a href="#" class="btn btn-outline-primary dropdown-toggle"
                           id="mainMenuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bars me-2"></i> Main Menu
                        </a>
                        <ul class="dropdown-menu shadow" aria-labelledby="mainMenuDropdown">
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="goToDashboard()">
                                    <i class="fas fa-tachometer-alt me-2"></i> Dashboard <!-- 	系統概覽+低庫存警報 -->
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="goToInventory_Management()">
                                    <i class="fas fa-warehouse me-2"></i> 	Inventory Management <!-- 庫存出庫/入庫 -->
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="goToTransactions​​()">
                                    <i class="fas fa-chart-line me-2"></i>  ​​Transactions​​ <!-- 	採購/銷售訂單統一管理 -->
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="goToReports()">
                                    <i class="fas fa-chart-bar me-2"></i> Reports <!-- 	報表分析 -->
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="goToSuppliers()">
                                    <i class="fas fa-truck me-2"></i> Suppliers <!--供應商管理 -->
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- 用戶菜單 -->
                <div class="d-flex align-items-center ms-auto">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                           id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/default-avatar.jpg" alt="User Avatar"
                                 class="rounded-circle me-2" width="40" height="40">
                            <span class="fw-semibold">@User.Identity?.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="goToEditProfile()">
                                    <i class="fa-solid fa-user-gear me-2"></i> Edit Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="goToChangePassword()">
                                    <i class="fa-solid fa-key me-2"></i> Change Password
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="javascript:void(0);" onclick="logout()">
                                    <i class="fa-solid fa-right-from-bracket me-2"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- 添加零件按钮和搜索栏 -->
        <div class="row mb-3">
            <div class="col-md-6">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPartModal">
                    <i class="fas fa-plus"></i> Add Part
                </button>
            </div>
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="input-group">
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Search by code, name or supplier..."
                           value="@ViewData["CurrentFilter"]">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="fas fa-search"></i> Search
                    </button>
                    @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                    {
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Clear
                        </a>
                    }
                </form>
            </div>
        </div>

        <!-- 零件列表 -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-boxes"></i> Parts List
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Supplier</th>
                                    <th>Min Stock</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var part in Model)
                                {
                                    <tr>
                                        <td>@part.Id</td>
                                        <td>@part.Code</td>
                                        <td>
                                            <strong>@part.Name</strong>
                                            @if (part.CurrentStock < part.MinStock)
                                            {
                                                <span class="badge bg-danger ms-1">Low Stock</span>
                                            }
                                        </td>
                                        <td>@part.Supplier</td>
                                        <td>@part.MinStock</td>
                                        <td>
                                            <span class="@(part.CurrentStock < part.MinStock ? "text-danger fw-bold" : "")">
                                                @part.CurrentStock
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button type="button" class="btn btn-outline-primary"
                                                        data-bs-toggle="modal" data-bs-target="#EditePartModal"
                                                        onclick="loadPartData(@part.Id)">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                                <button type="button" class="btn btn-outline-danger"
                                                        onclick="submitDeleteForm(@part.Id, '@part.Name.Replace("'", "&#39;")')">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                                <form id="deleteForm" asp-action="Delete_Parts" method="post" style="display: none;">
                                                    <input type="hidden" name="id" id="deletePartId" />
                                                    @Html.AntiForgeryToken()
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No parts found</p>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPartModal">
                            <i class="fas fa-plus"></i> Add First Part
                        </button>
                    </div>
                }
            </div>
        </div>


        <!-- 添加零件模态框 -->
        <div class="modal fade" id="addPartModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add New Part</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="Create_Parts" method="post">
                        <div class="modal-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <label for="Code" class="form-label">Part Code</label>
                                <input type="text" class="form-control" id="Code" name="Code" required>
                                <span class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Name" class="form-label">Part Name</label>
                                <input type="text" class="form-control" id="Name" name="Name" required>
                                <span class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Supplier" class="form-label">Supplier</label>
                                <input type="text" class="form-control" id="Supplier" name="Supplier">
                                <span class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="MinStock" class="form-label">Minimum Stock</label>
                                <input type="number" class="form-control" id="MinStock" name="MinStock" min="0" required>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- 编辑零件模态框 -->
        <div class="modal fade" id="EditePartModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Part</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="Edits_Parts" method="post">
                        <input type="hidden" id="Edit_Id" name="Id" />
                        <div class="modal-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label for="Edit_Code" class="form-label">Part Code</label>
                                <input type="text" class="form-control" id="Edit_Code" name="Code" required>
                                <span class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Edit_Name" class="form-label">Part Name</label>
                                <input type="text" class="form-control" id="Edit_Name" name="Name" required>
                                <span class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Edit_Supplier" class="form-label">Supplier</label>
                                <input type="text" class="form-control" id="Edit_Supplier" name="Supplier">
                                <span class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="Edit_MinStock" class="form-label">Minimum Stock</label>
                                <input type="number" class="form-control" id="Edit_MinStock" name="MinStock" min="0" required>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- 登出表单 -->
    <form id="logoutForm" asp-action="logout" asp-controller="Account" method="post" style="display:none;">
        @Html.AntiForgeryToken()  <!-- 防偽令牌 -->
    </form>
    <script>
         // 加载零件数据到编辑模态框
         function loadPartData(partId) {
             fetch(`/Home/GetPartData?id=${partId}`)
                 .then(response => {
                     if (!response.ok) {
                         throw new Error('Network response was not ok');
                     }
                     return response.json();
                 })
                 .then(data => {
                     // 填充表单数据
                     document.getElementById('Edit_Id').value = data.id;
                     document.getElementById('Edit_Code').value = data.code;
                     document.getElementById('Edit_Name').value = data.name;
                     document.getElementById('Edit_Supplier').value = data.supplier;
                     document.getElementById('Edit_MinStock').value = data.minStock;
                 })
                 .catch(error => {
                     console.error('Error loading part data:', error);
                     alert('无法加载零件数据，请稍后重试');
                 });
         }

         // 显示成功或错误消息
         @if (TempData["SuccessMessage"] != null)
         {
                                 <text>
                                 document.addEventListener('DOMContentLoaded', function() {
                                     alert('@TempData["SuccessMessage"]');
                                 });
                                 </text>
         }

         @if (TempData["ErrorMessage"] != null)
         {
                                 <text>
                                 document.addEventListener('DOMContentLoaded', function() {
                                     alert('@TempData["ErrorMessage"]');
                                 });
                                 </text>
         }

         //確認登出
         function logout()
         {
             if(confirm("Are you sure you want to logout?"))
              {

                   document.getElementById('logoutForm').submit();//提交後登出
              }
         }


         // 确认删除零件
         function submitDeleteForm(id, name) {
             if (confirm(`Are you sure you want to delete "${name}"?\nThis action cannot be undone.`)) {
                 document.getElementById('deletePartId').value = id;
                 document.getElementById('deleteForm').submit();
             }
         }

        //點擊Edit Profile 跳轉到Edit_profile.cshtml
        function goToEditProfile() {
             window.location.href = '@Url.Action("Edit_Profile", "Account")';//表示跳轉到Account/Edit_Profile.cshtml
          }


        //點擊Change Password 跳轉到Change_Password.cshtml
          function goToChangePassword(){
              window.location.href = '@Url.Action("Change_Password", "Account")';//表示跳轉到Account/Change_Password.cshtml
         }

         //點擊Inventory Management 跳轉到Inbound&Outbound.cshtml
          function goToInventory_Management(){
               window.location.href = '@Url.Action("Inbound_Outbound", "Home")'//表示跳轉到Home/Inbound_Outbound.cshtml
          }


        function goToDashboard() {
              window.location.href = '@Url.Action("Dashboard", "Home")';
        }

    </script>
</body>
</html>