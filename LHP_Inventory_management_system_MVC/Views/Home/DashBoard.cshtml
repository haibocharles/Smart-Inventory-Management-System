@model LHP_Inventory_management_system_MVC.Models.DashboardViewModel
@{
    Layout = null;
    ViewData["Title"] = "Dashboard - Inventory System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        :root {
            --font-main: 'Plus Jakarta Sans', sans-serif;
            /* 淺色系高級配色 */
            --bg-body: #f8fafc; /* 極淺灰藍 */
            --bg-card: #ffffff;
            --primary: #4f46e5; /* Indigo 600 - 專業感強的主色 */
            --primary-light: #eef2ff;
            --text-dark: #0f172a; /* Slate 900 - 接近黑色的深藍 */
            --text-secondary: #64748b; /* Slate 500 */
            /* 狀態色 */
            --success-bg: #ecfdf5;
            --success-text: #059669;
            --danger-bg: #fef2f2;
            --danger-text: #dc2626;
            --warning-bg: #fffbeb;
            --warning-text: #d97706;
            /* 高級感陰影 (Soft & Deep) */
            --shadow-card: 0 10px 30px -10px rgba(0, 0, 0, 0.05);
            --shadow-hover: 0 20px 40px -10px rgba(0, 0, 0, 0.08);
            --shadow-navbar: 0 4px 20px rgba(0,0,0,0.02);
        }

        body {
            font-family: var(--font-main);
            background-color: var(--bg-body);
            color: var(--text-dark);
            min-height: 100vh;
            padding-bottom: 40px;
            /* 背景裝飾：極淡的漸層光暈 */
            background-image: radial-gradient(circle at 0% 0%, #f1f5f9 0%, transparent 50%), radial-gradient(circle at 100% 0%, #e0e7ff 0%, transparent 30%);
            background-attachment: fixed;
        }

        /* --- 導航欄 (懸浮白條) --- */
        .navbar-premium {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(0,0,0,0.03);
            padding: 1rem 2rem;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: var(--shadow-navbar);
        }

        .nav-link-custom {
            color: var(--text-secondary);
            font-weight: 600;
            padding: 0.6rem 1.2rem;
            border-radius: 10px;
            transition: all 0.2s ease;
            margin: 0 4px;
        }

            .nav-link-custom:hover, .nav-link-custom.active {
                background-color: var(--primary-light);
                color: var(--primary);
            }

        /* --- 卡片通用樣式 (Clean & Float) --- */
        .premium-card {
            background: var(--bg-card);
            border-radius: 20px;
            border: 1px solid #f1f5f9; /* 極細邊框 */
            padding: 1.75rem;
            box-shadow: var(--shadow-card);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

            .premium-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
                border-color: #e2e8f0;
            }

        /* --- 歡迎區塊 (簡潔大氣) --- */
        .welcome-header {
            margin: 2.5rem 0;
            padding: 0 1rem;
        }

        .welcome-title {
            font-size: 2rem;
            font-weight: 800;
            color: var(--text-dark);
            letter-spacing: -0.5px;
        }

        .welcome-subtitle {
            color: var(--text-secondary);
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        /* --- 統計數字卡片 --- */
        .stats-icon-circle {
            width: 56px;
            height: 56px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            margin-bottom: 1.25rem;
            transition: transform 0.3s;
        }

        .premium-card:hover .stats-icon-circle {
            transform: scale(1.1) rotate(5deg);
        }

        .bg-icon-primary {
            background: #e0e7ff;
            color: var(--primary);
        }

        .bg-icon-success {
            background: #dcfce7;
            color: #16a34a;
        }

        .bg-icon-info {
            background: #e0f2fe;
            color: #0284c7;
        }

        .bg-icon-danger {
            background: #fee2e2;
            color: #dc2626;
        }

        .stats-value {
            font-size: 2.25rem;
            font-weight: 800;
            color: var(--text-dark);
            line-height: 1.1;
            margin-bottom: 0.25rem;
            letter-spacing: -1px;
        }

        .stats-label {
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* --- 內容區塊標題 --- */
        .section-title {
            font-size: 1.15rem;
            font-weight: 700;
            color: var(--text-dark);
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        /* --- 圖表與表單 --- */
        .form-select-premium {
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            padding: 0.5rem 2rem 0.5rem 1rem;
            font-size: 0.9rem;
            color: var(--text-dark);
            background-color: #f8fafc;
            cursor: pointer;
        }

            .form-select-premium:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            }

        /* --- 交易列表 (極簡線條) --- */
        .trans-item {
            display: flex;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid #f1f5f9;
        }

            .trans-item:last-child {
                border-bottom: none;
            }

        .trans-icon-box {
            width: 42px;
            height: 42px;
            border-radius: 12px;
            background: #f1f5f9;
            color: var(--text-secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 0.9rem;
        }

        .trans-inbound .trans-icon-box {
            background: var(--success-bg);
            color: var(--success-text);
        }

        .trans-outbound .trans-icon-box {
            background: var(--primary-light);
            color: var(--primary);
        }

        .trans-qty {
            font-family: var(--font-main);
            font-weight: 700;
            font-size: 1rem;
        }

        .text-in {
            color: var(--success-text);
        }

        .text-out {
            color: var(--primary);
        }

        /* --- 表格樣式 (Modern Clean) --- */
        .table-premium {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .table-premium th {
                background: #f8fafc;
                color: var(--text-secondary);
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.75rem;
                padding: 1rem 1.5rem;
                border-top: 1px solid #f1f5f9;
                border-bottom: 1px solid #f1f5f9;
                letter-spacing: 0.05em;
            }

            .table-premium td {
                padding: 1.25rem 1.5rem;
                border-bottom: 1px solid #f8fafc;
                vertical-align: middle;
                color: var(--text-dark);
                font-weight: 500;
            }

            .table-premium tr:hover td {
                background-color: #f8fafc; /* Hover 變灰底 */
            }

        /* 庫存徽章 */
        .stock-badge {
            padding: 5px 12px;
            border-radius: 30px;
            font-size: 0.75rem;
            font-weight: 700;
        }

        .badge-ok {
            background: var(--success-bg);
            color: var(--success-text);
        }

        .badge-low {
            background: var(--danger-bg);
            color: var(--danger-text);
        }

        /* 按鈕與分頁 */
        .btn-circle {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            border: 1px solid #e2e8f0;
            background: white;
            color: var(--text-secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

            .btn-circle:hover:not(:disabled) {
                border-color: var(--primary);
                color: var(--primary);
                background: var(--primary-light);
            }

        .btn-primary-glow {
            background: var(--primary);
            border: none;
            box-shadow: 0 4px 14px rgba(79, 70, 229, 0.4);
            transition: 0.3s;
        }

            .btn-primary-glow:hover {
                background: #4338ca;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(79, 70, 229, 0.6);
            }

        /* 滾動條美化 */
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #94a3b8;
            }

        .premium-card, .navbar-premium {
            overflow: visible !important;
        }

    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-premium">
        <div class="container-fluid" style="max-width: 1400px;">
            <a class="navbar-brand d-flex align-items-center gap-2" href="#">
                <div style="width: 32px; height: 32px; background: var(--primary); border-radius: 8px; display:flex; align-items:center; justify-content:center; color:white;">
                    <i class="fas fa-cube fa-sm"></i>
                </div>
                <span style="font-weight: 800; font-size: 1.2rem; color: var(--text-dark); letter-spacing: -0.5px;">IMS</span>
            </a>

            <div class="collapse navbar-collapse ms-4" id="navbarNav">
                <ul class="navbar-nav gap-2">
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom active" href="#" onclick="goToMainPage()">
                            <i class="fas fa-chart-pie me-2"></i>Main page
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom active" href="#" onclick="goToDashboard()">
                            <i class="fas fa-chart-pie me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="#" onclick="goToInventoryManagement()">
                            <i class="fas fa-box me-2"></i>Inventory Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="#" onclick="goToReports()">
                            <i class="fas fa-file-alt me-2"></i>Reports
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="#" onclick="goToReports()">
                            <i class="fas fa-file-alt me-2"></i>Supplier
                        </a>
                    </li>
                </ul>
            </div>

            <!-- 用戶菜單 -->
            <div class="dropdown ms-auto">
                <a class="d-flex align-items-center text-decoration-none dropdown-toggle"
                   id="userDropdown"
                   data-bs-toggle="dropdown"
                   aria-expanded="false"
                   style="cursor: pointer;">
                    <img src="~/images/default-avatar.jpg"
                         alt="Avatar"
                         class="rounded-circle me-2"
                         width="42" height="42">
                    <div class="text-start">
                        <div class="fw-bold" style="font-size: 0.95rem;">@User.Identity?.Name</div>
                        <div class="text-secondary small">Administrator</div>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2" aria-labelledby="userDropdown">
                    <li>
                        <a class="dropdown-item py-2" href="javascript:void(0)" onclick="goToEditProfile()">
                            <i class="fas fa-user-gear me-2"></i> Edit Profile
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item py-2" href="javascript:void(0)" onclick="goToChangePassword()">
                            <i class="fas fa-key me-2"></i> Change Password
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item py-2 text-danger" href="javascript:void(0)" onclick="logout()">
                            <i class="fas fa-right-from-bracket me-2"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" style="max-width: 1400px;">

        <div class="d-flex flex-wrap justify-content-between align-items-end welcome-header">
            <div>
                <h1 class="welcome-title">Dashboard</h1>
                <p class="welcome-subtitle">Welcome back, here's what's happening with your stock today.</p>
            </div>
            <div>
                <button class="btn btn-primary btn-lg btn-primary-glow rounded-pill px-4" onclick="goToInventoryManagement()">
                    <i class="fas fa-plus me-2"></i>Manage Inventory
                </button>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-xl-3 col-md-6">
                <div class="premium-card">
                    <div class="stats-icon-circle bg-icon-primary">
                        <i class="fas fa-cubes"></i>
                    </div>
                    <div class="stats-value">@Model.TotalProducts</div>
                    <div class="stats-label">Total Products</div>
                    <div class="mt-3 pt-3 border-top text-muted" style="font-size: 0.8rem;">
                        <i class="fas fa-check-circle text-success me-1"></i> Updated just now
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="premium-card">
                    <div class="stats-icon-circle bg-icon-success">
                        <i class="fas fa-coins"></i>
                    </div>
                    <div class="stats-value">@Model.TotalInventoryValue.ToString("C0")</div>
                    <div class="stats-label">Total Asset Value</div>
                    <div class="mt-3 pt-3 border-top text-muted" style="font-size: 0.8rem;">
                        <i class="fas fa-chart-line me-1"></i> Financial Overview
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="premium-card">
                    <div class="stats-icon-circle bg-icon-info">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <div class="stats-value">@Model.TotalSold</div>
                    <div class="stats-label">Items Sold</div>
                    <div class="mt-3 pt-3 border-top text-muted" style="font-size: 0.8rem;">
                        Lifetime outbound
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="premium-card" style="border-left: 4px solid #ef4444;">
                    <div class="stats-icon-circle bg-icon-danger">
                        <i class="fas fa-bell"></i>
                    </div>
                    <div class="stats-value text-danger">@Model.LowStockItems</div>
                    <div class="stats-label text-danger">Low Stock Alerts</div>
                    <div class="mt-3 pt-3 border-top text-muted" style="font-size: 0.8rem;">
                        Needs attention immediately
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="premium-card h-100 d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="section-title mb-0">
                            <i class="fas fa-chart-area me-2 text-primary"></i>
                            Stock Trends
                        </div>
                        <select class="form-select-premium" id="productSelector">
                            <option value="">Select Product...</option>
                            @if (Model.Parts != null)
                            {
                                foreach (var part in Model.Parts)
                                {
                                    <option value="@part.Id">@part.Name (@part.Code)</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="flex-grow-1" style="position: relative; min-height: 350px;">
                        <canvas id="inventoryTrendChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="premium-card h-100 d-flex flex-column">
                    <div class="section-title">
                        <i class="fas fa-history me-2 text-secondary"></i>
                        Recent Activity
                    </div>

                    <div style="overflow-y: auto; flex: 1; padding-right: 5px;">
                        @if (ViewBag.Orders != null)
                        {
                            var orders = ((IEnumerable<dynamic>)ViewBag.Orders).OrderByDescending(o => o.OrderDate).Take(6);
                            foreach (var order in orders)
                            {
                                var isIn = order.OrderType?.ToLower() == "inbound";
                                <div class="trans-item @(isIn ? "trans-inbound" : "trans-outbound")">
                                    <div class="trans-icon-box">
                                        <i class="fas @(isIn ? "fa-arrow-down" : "fa-arrow-up")"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div style="font-weight: 700; color: var(--text-dark);">@order.PartName</div>
                                        <div style="font-size: 0.8rem; color: var(--text-secondary);">
                                            @order.OrderDate.ToString("MM/dd HH:mm")
                                        </div>
                                    </div>
                                    <div class="trans-qty @(isIn ? "text-in" : "text-out")">
                                        @(isIn ? "+" : "-")@order.Quantity
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5 text-secondary">No recent transactions found.</div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="premium-card mb-5 p-0 overflow-hidden">
            <div class="p-4 d-flex justify-content-between align-items-center border-bottom border-light">
                <div class="section-title mb-0">
                    <i class="fas fa-list me-2 text-primary"></i>
                    Current Inventory
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-circle" id="prevBtn" onclick="changePage(-1)"><i class="fas fa-chevron-left"></i></button>
                    <button class="btn btn-circle" id="nextBtn" onclick="changePage(1)"><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table-premium" id="stockTable">
                    <thead>
                        <tr>
                            <th style="padding-left: 2rem;">Item Name</th>
                            <th>Code</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th class="text-end" style="padding-right: 2rem;">Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Parts != null)
                        {
                            foreach (var part in Model.Parts)
                            {
                                <tr class="stock-row">
                                    <td style="padding-left: 2rem;">
                                        <div class="fw-bold">@part.Name</div>
                                    </td>
                                    <td class="text-secondary">@part.Code</td>
                                    <td><span class="badge bg-light text-dark border">Part</span></td>
                                    <td>
                                        @if (part.CurrentStock > 10)
                                        {
                                            <span class="stock-badge badge-ok">In Stock</span>
                                        }
                                        else
                                        {
                                            <span class="stock-badge badge-low">Low Stock</span>
                                        }
                                    </td>
                                    <td class="text-end fw-bold" style="padding-right: 2rem; font-size: 1.1rem;">
                                        @part.CurrentStock
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="p-3 text-end bg-light text-secondary small border-top border-light" id="pageInfo">
                Showing Page 1
            </div>
        </div>

    </div>
    <form id="logoutForm" asp-action="logout" asp-controller="Account" method="post" style="display:none;">
        @Html.AntiForgeryToken()
    </form>
    <script>
        // 导航功能（保持不变）
        function goToDashboard() {
            window.location.reload();
        }

        function goToInventoryManagement() {
            window.location.href = '@Url.Action("Inbound_Outbound", "Home")';
        }

        function goToTransactions() {
            alert('Transactions page coming soon!');
        }

        function goToReports() {
            alert('Reports page coming soon!');
        }

        function goToSuppliers() {
            alert('Suppliers page coming soon!');
        }
         function goToMainPage() {
              window.location.href = '@Url.Action("Index", "Home")';
        }


        // 快速操作功能
        function quickInbound() {
            // 可以跳转到快速入库页面或打开入库模态框
            alert('Quick inbound feature coming soon!');
        }

        function quickOutbound() {
            // 可以跳转到快速出库页面或打开出库模态框
            alert('Quick outbound feature coming soon!');
        }

        
          //點擊Edit Profile 跳轉到Edit_profile.cshtml
        function goToEditProfile() {
             window.location.href = '@Url.Action("Edit_Profile", "Account")';//表示跳轉到Account/Edit_Profile.cshtml
          }


        //點擊Change Password 跳轉到Change_Password.cshtml
          function goToChangePassword(){
              window.location.href = '@Url.Action("Change_Password", "Account")';//表示跳轉到Account/Change_Password.cshtml
         }

         //點擊Inventory Management 跳轉到Inbound&Outbound.cshtml
          function goToInventory_Management(){
               window.location.href = '@Url.Action("Inbound_Outbound", "Home")'//表示跳轉到Home/Inbound_Outbound.cshtml
          }

        function logout() {
            if (confirm("Are you sure you want to logout?")) {
                document.getElementById('logoutForm').submit();
            }
        }

        // 显示成功或错误消息
        @if (TempData["SuccessMessage"] != null)
        {
                    <text>
                    document.addEventListener('DOMContentLoaded', function() {
                        alert('@TempData["SuccessMessage"]');
                    });
                    </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                    <text>
                    document.addEventListener('DOMContentLoaded', function() {
                        alert('@TempData["ErrorMessage"]');
                    });
                    </text>
        }

             // 初始化圖表變量
            let inventoryTrendChart = null;

            document.addEventListener('DOMContentLoaded', function() {
                initializeChart();

                // 產品選擇器事件監聽
                document.getElementById('productSelector').addEventListener('change', function() {
                    const selectedPartId = this.value;

                    if (selectedPartId) {
                        loadInventoryData(selectedPartId);
                    } else {
                        clearChart();
                    }
                });
            });


             function initializeChart(){
                   const ctx = document.getElementById('inventoryTrendChart').getContext('2d');

                   inventoryTrendChart = new Chart(ctx, {
                       type:'line',
                           data: {
                                labels: [], // 初始為空
                                datasets: [{
                                    label: 'Select a part to view trend',
                                     data: [],
                                    borderColor: '#667eea',
                                    backgroundColor: 'rgba(102, 126, 234, 0.1)',
                                    borderWidth: 3,
                                    fill: true,
