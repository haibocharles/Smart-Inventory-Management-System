            async function loadInventoryData(partId){
                try{
                    //顯示載入狀態
                    showChartLoading();
                    const response = await fetch(`/InventoryApi/${partId}/trend`);


                if(!response.ok){
                     throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();

                if (data.success) {
                    updateChart(data.labels, data.values, data.partName);
                } else {
                    throw new Error(data.message || 'Unknown error');
                }

            }catch(error){
                console.error('Error loading inventory data',error)
                showChartError('Failed to load inventory trend data')
            }
            }

            function showChartLoading(){
                 if (inventoryTrendChart) {
                     inventoryTrendChart.data.labels = ['Loading...'];
                     inventoryTrendChart.data.datasets[0].data=[50];
                     inventoryTrendChart.data.datasets[0].label = 'Loading...';
                     inventoryTrendChart.update();
            }
            }

            function showChartError(message) {
                if (inventoryTrendChart) {
                    inventoryTrendChart.data.labels = ['Error'];
                    inventoryTrendChart.data.datasets[0].data = [0];
                    inventoryTrendChart.data.datasets[0].label = 'Error loading data';
                    inventoryTrendChart.update();
                }
                console.error('Chart Error:', message);
            }

            function clearChart() {
                   if (inventoryTrendChart) {
                       inventoryTrendChart.data.labels = [];
                       inventoryTrendChart.data.datasets[0].data = [];
                       inventoryTrendChart.data.datasets[0].label = 'Select a part to view trend';
                       inventoryTrendChart.update();
                   }
               }

              function updateChart(labels, values, partName) {
                   if (inventoryTrendChart) {
                       inventoryTrendChart.data.labels = labels;
                       inventoryTrendChart.data.datasets[0].data = values;
                       inventoryTrendChart.data.datasets[0].label = `Stock Level - ${partName}`;
                       inventoryTrendChart.update();
                   }
               }

              // --- Stock Levels 分頁邏輯 ---
        const rowsPerPage = 10;
        let currentPage = 1;
        let totalRows = 0;
        let totalPages = 1;

        document.addEventListener('DOMContentLoaded', function() {
            // 初始化分頁
            const rows = document.querySelectorAll('.stock-row');
            totalRows = rows.length;

            if (totalRows > 0) {
                totalPages = Math.ceil(totalRows / rowsPerPage);
                updateTableDisplay();
            } else {
                document.getElementById('pageInfo').innerText = "Page 0 of 0";
                document.getElementById('prevBtn').disabled = true;
                document.getElementById('nextBtn').disabled = true;
            }
        });

        function changePage(direction) {
            const newPage = currentPage + direction;

            if (newPage >= 1 && newPage <= totalPages) {
                currentPage = newPage;
                updateTableDisplay();
            }
        }

        function updateTableDisplay() {
            const rows = document.querySelectorAll('.stock-row');
            const start = (currentPage - 1) * rowsPerPage;
            const end = start + rowsPerPage;

            rows.forEach((row, index) => {
                if (index >= start && index < end) {
                    row.style.display = ''; // 顯示
                } else {
                    row.style.display = 'none'; // 隱藏
                }
            });

            // 更新文字
            document.getElementById('pageInfo').innerText = `Page ${currentPage} of ${totalPages}`;

            // 更新按鈕狀態
            document.getElementById('prevBtn').disabled = (currentPage === 1);
            document.getElementById('nextBtn').disabled = (currentPage === totalPages);
        }







