        // 显示成功或错误消息
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                document.addEventListener('DOMContentLoaded', function() {
                    alert('@TempData["SuccessMessage"]');
                });
                </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                document.addEventListener('DOMContentLoaded', function() {
                    alert('@TempData["ErrorMessage"]');
                });
                </text>
