@model Change_Password
@{
    ViewData["Title"] = "Change Password - Inventory System";
    Layout = null;  // 添加這行來禁用佈局
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        :root {
            --font-main: 'Plus Jakarta Sans', sans-serif;
            /* 淺色系高級配色 */
            --bg-body: #f8fafc; /* 極淺灰藍 */
            --bg-card: #ffffff;
            --primary: #4f46e5; /* Indigo 600 - 專業感強的主色 */
            --primary-light: #eef2ff;
            --text-dark: #0f172a; /* Slate 900 - 接近黑色的深藍 */
            --text-secondary: #64748b; /* Slate 500 */
            /* 狀態色 */
            --success-bg: #ecfdf5;
            --success-text: #059669;
            --danger-bg: #fef2f2;
            --danger-text: #dc2626;
            --warning-bg: #fffbeb;
            --warning-text: #d97706;
            /* 高級感陰影 (Soft & Deep) */
            --shadow-card: 0 10px 30px -10px rgba(0, 0, 0, 0.05);
            --shadow-hover: 0 20px 40px -10px rgba(0, 0, 0, 0.08);
            --shadow-navbar: 0 4px 20px rgba(0,0,0,0.02);
        }

        body {
            font-family: var(--font-main);
            background-color: var(--bg-body);
            color: var(--text-dark);
            min-height: 100vh;
            padding-bottom: 40px;
            /* 背景裝飾：極淡的漸層光暈 */
            background-image: radial-gradient(circle at 0% 0%, #f1f5f9 0%, transparent 50%), radial-gradient(circle at 100% 0%, #e0e7ff 0%, transparent 30%);
            background-attachment: fixed;
        }

        /* --- 導航欄 (懸浮白條) --- */
        .navbar-premium {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(0,0,0,0.03);
            padding: 1rem 2rem;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: var(--shadow-navbar);
        }

        .nav-link-custom {
            color: var(--text-secondary);
            font-weight: 600;
            padding: 0.6rem 1.2rem;
            border-radius: 10px;
            transition: all 0.2s ease;
            margin: 0 4px;
        }

            .nav-link-custom:hover, .nav-link-custom.active {
                background-color: var(--primary-light);
                color: var(--primary);
            }

        /* --- 卡片通用樣式 (Clean & Float) --- */
        .premium-card {
            background: var(--bg-card);
            border-radius: 20px;
            border: 1px solid #f1f5f9; /* 極細邊框 */
            padding: 1.75rem;
            box-shadow: var(--shadow-card);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

            .premium-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
                border-color: #e2e8f0;
            }

        /* --- 歡迎區塊 (簡潔大氣) --- */
        .welcome-header {
            margin: 2.5rem 0;
            padding: 0 1rem;
        }

        .welcome-title {
            font-size: 2rem;
            font-weight: 800;
            color: var(--text-dark);
            letter-spacing: -0.5px;
        }

        .welcome-subtitle {
            color: var(--text-secondary);
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        /* --- 內容區塊標題 --- */
        .section-title {
            font-size: 1.15rem;
            font-weight: 700;
            color: var(--text-dark);
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        /* --- 表單樣式 --- */
        .form-input-premium {
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            color: var(--text-dark);
            background-color: #f8fafc;
        }

            .form-input-premium:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            }

        /* --- 按鈕樣式 --- */
        .btn-primary-glow {
            background: var(--primary);
            border: none;
            box-shadow: 0 4px 14px rgba(79, 70, 229, 0.4);
            transition: 0.3s;
        }

            .btn-primary-glow:hover {
                background: #4338ca;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(79, 70, 229, 0.6);
            }

        .btn-secondary-glow {
            background: #6b7280;
            border: none;
            color: white;
            box-shadow: 0 4px 14px rgba(107, 114, 128, 0.2);
            transition: 0.3s;
        }

            .btn-secondary-glow:hover {
                background: #4b5563;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(107, 114, 128, 0.3);
            }

        /* --- 警報樣式 --- */
        .alert-premium {
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

            .alert-premium.success {
                background: var(--success-bg);
                color: var(--success-text);
                border: 1px solid var(--success-text);
            }

            .alert-premium.danger {
                background: var(--danger-bg);
                color: var(--danger-text);
                border: 1px solid var(--danger-text);
            }

        /* --- 密碼相關樣式 --- */
        .password-icon {
            font-size: 80px;
            color: var(--primary);
            margin-bottom: 20px;
        }

        .password-requirements {
            margin-top: 20px;
            padding: 15px;
            background-color: #f9f9f9;
            border-radius: 5px;
            border-left: 4px solid var(--primary);
        }

        .requirement-item {
            margin-bottom: 5px;
        }

        .password-strength {
            margin-top: 5px;
            height: 5px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .strength-weak {
            background-color: var(--danger-text);
            width: 25%;
        }

        .strength-fair {
            background-color: var(--warning-text);
            width: 50%;
        }

        .strength-good {
            background-color: #5bc0de;
            width: 75%;
        }

        .strength-strong {
            background-color: var(--success-text);
            width: 100%;
        }

        /* 滾動條美化 */
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #94a3b8;
            }

        .premium-card, .navbar-premium {
            overflow: visible !important;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-premium">
        <div class="container-fluid" style="max-width: 1400px;">
            <a class="navbar-brand d-flex align-items-center gap-2" href="#">
                <div style="width: 32px; height: 32px; background: var(--primary); border-radius: 8px; display:flex; align-items:center; justify-content:center; color:white;">
                    <i class="fas fa-cube fa-sm"></i>
                </div>
                <span style="font-weight: 800; font-size: 1.2rem; color: var(--text-dark); letter-spacing: -0.5px;">IMS</span>
            </a>

            <div class="collapse navbar-collapse ms-4" id="navbarNav">
                <ul class="navbar-nav gap-2">
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="#" onclick="goToMainPage()">
                            <i class="fas fa-chart-pie me-2"></i>Main page
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="#" onclick="goToDashboard()">
                            <i class="fas fa-chart-pie me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="#" onclick="goToInventoryManagement()">
                            <i class="fas fa-box me-2"></i>Inventory Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="#" onclick="goToReports()">
                            <i class="fas fa-file-alt me-2"></i>Reports
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="#" onclick="goToReports()">
                            <i class="fas fa-file-alt me-2"></i>Supplier
                        </a>
                    </li>
                </ul>
            </div>

            <!-- 用戶菜單 -->
            <div class="dropdown ms-auto">
                <a class="d-flex align-items-center text-decoration-none dropdown-toggle"
                   id="userDropdown"
                   data-bs-toggle="dropdown"
                   aria-expanded="false"
                   style="cursor: pointer;">
                    <img src="~/images/default-avatar.jpg"
                         alt="Avatar"
                         class="rounded-circle me-2"
                         width="42" height="42">
                    <div class="text-start">
                        <div class="fw-bold" style="font-size: 0.95rem;">@User.Identity?.Name</div>
                        <div class="text-secondary small">Administrator</div>
                    </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2" aria-labelledby="userDropdown">
                    <li>
                        <a class="dropdown-item py-2" href="javascript:void(0)" onclick="goToEditProfile()">
                            <i class="fas fa-user-gear me-2"></i> Edit Profile
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item py-2" href="javascript:void(0)" onclick="goToChangePassword()">
                            <i class="fas fa-key me-2"></i> Change Password
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item py-2 text-danger" href="javascript:void(0)" onclick="logout()">
                            <i class="fas fa-right-from-bracket me-2"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid" style="max-width: 1400px;">

        <div class="d-flex flex-wrap justify-content-between align-items-end welcome-header">
            <div>
                <h1 class="welcome-title">Change Password</h1>
                <p class="welcome-subtitle">Update your account password for better security.</p>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-12">
                <div class="premium-card">
                    <!-- 顯示成功/錯誤消息 -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert-premium success alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert-premium danger alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="row g-4">
                        <div class="col-md-3 text-center">
                            <!-- 密碼圖標 -->
                            <div class="password-icon">
                                <i class="fas fa-lock"></i>
                            </div>
                            <h4>Password Security</h4>
                            <p class="text-muted">Keep your account secure with a strong password</p>
                        </div>

                        <div class="col-md-9">
                            <div class="section-title">
                                <i class="fas fa-key me-2 text-primary"></i>
                                Change Your Password
                            </div>

                            <form role="form" method="post" asp-action="Change_Password" asp-controller="Account" onsubmit="return validateForm()">
                                @Html.AntiForgeryToken()

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="mb-3">
                                    <label class="form-label stats-label">Current Password</label>
                                    <input class="form-control form-input-premium" type="password" asp-for="CurrentPassword" placeholder="Enter your current password" id="currentPassword">
                                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label stats-label">New Password</label>
                                    <input class="form-control form-input-premium" type="password" asp-for="NewPassword" placeholder="Enter your new password" id="newPassword" oninput="checkPasswordStrength()">
                                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                    <!-- 密碼強度指示器 -->
                                    <div class="password-strength" id="passwordStrength"></div>
                                    <small class="form-text text-muted" id="passwordStrengthText"></small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label stats-label">Confirm Password</label>
                                    <input class="form-control form-input-premium" type="password" asp-for="ConfirmPassword" placeholder="Confirm your new password" id="confirmPassword" oninput="checkPasswordMatch()">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                    <small class="form-text text-muted" id="passwordMatchText"></small>
                                </div>

                                <!-- 密碼要求提示 -->
                                <div class="password-requirements">
                                    <h5>Password Requirements:</h5>
                                    <ul class="list-unstyled">
                                        <li class="requirement-item">
                                            <span id="lengthRequirement" class="text-muted">
                                                <span class="fas fa-square"></span> At least 6 characters
                                            </span>
                                        </li>
                                        <li class="requirement-item">
                                            <span id="matchRequirement" class="text-muted">
                                                <span class="fas fa-square"></span> Passwords must match
                                            </span>
                                        </li>
                                    </ul>
                                </div>

                                <div class="d-flex gap-3 mt-4">
                                    <button type="submit" class="btn btn-primary-glow rounded-pill px-4">Update Password</button>
                                    <button type="button" class="btn btn-secondary-glow rounded-pill px-4" onclick="goBack()">Back to Home Page</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <form id="logoutForm" asp-action="logout" asp-controller="Account" method="post" style="display:none;">
        @Html.AntiForgeryToken()
    </form>

    <script>
        // 导航功能（保持不变）
        function goToDashboard() {
            window.location.reload();
        }

        function goToInventoryManagement() {
            window.location.href = '@Url.Action("Inbound_Outbound", "Home")';
        }

        function goToTransactions() {
            alert('Transactions page coming soon!');
        }

        function goToReports() {
            alert('Reports page coming soon!');
        }

        function goToSuppliers() {
            alert('Suppliers page coming soon!');
        }
         function goToMainPage() {
              window.location.href = '@Url.Action("Index", "Home")';
        }


        // 快速操作功能
        function quickInbound() {
            // 可以跳转到快速入库页面或打开入库模态框
            alert('Quick inbound feature coming soon!');
        }

        function quickOutbound() {
            // 可以跳转到快速出库页面或打开出库模态框
            alert('Quick outbound feature coming soon!');
        }


          //點擊Edit Profile 跳轉到Edit_profile.cshtml
        function goToEditProfile() {
             window.location.href = '@Url.Action("Edit_Profile", "Account")';//表示跳轉到Account/Edit_Profile.cshtml
          }


        //點擊Change Password 跳轉到Change_Password.cshtml
          function goToChangePassword(){
              window.location.href = '@Url.Action("Change_Password", "Account")';//表示跳轉到Account/Change_Password.cshtml
         }

         //點擊Inventory Management 跳轉到Inbound&Outbound.cshtml
          function goToInventory_Management(){
               window.location.href = '@Url.Action("Inbound_Outbound", "Home")'//表示跳轉到Home/Inbound_Outbound.cshtml
          }

        function logout() {
            if (confirm("Are you sure you want to logout?")) {
                document.getElementById('logoutForm').submit();
            }
        }

        function goBack() {
            window.location.href = '/Home/Index';
        }

        // 檢查密碼強度
        function checkPasswordStrength() {
            var password = document.getElementById('newPassword').value;
            var strengthBar = document.getElementById('passwordStrength');
            var strengthText = document.getElementById('passwordStrengthText');
            var lengthRequirement = document.getElementById('lengthRequirement');

            let strength = 0;
            let text = '';
            let color = '';
            let width = '0%';

            if (password.length === 0) {
                strengthBar.className = 'password-strength';
                strengthBar.style.width = '0%';
                strengthText.textContent = '';
                updateRequirementIcon(lengthRequirement, false);
                return;
            }

            // 檢查密碼長度
            if (password.length >= 6) {
                strength++;
                updateRequirementIcon(lengthRequirement, true);
            } else {
                updateRequirementIcon(lengthRequirement, false);
            }

            if (password.length >= 8) strength++;

            // 檢查包含數字
            if (/\d/.test(password)) strength++;

            // 檢查包含小寫和大寫字母
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;

            // 檢查包含特殊字符
            if (/[^a-zA-Z0-9]/.test(password)) strength++;

            // 根據強度設置顯示
            switch(strength) {
                case 0:
                case 1:
                    width = '25%';
                    color = 'strength-weak';
                    text = 'Password strength: Weak';
                    break;
                case 2:
                case 3:
                    width = '50%';
                    color = 'strength-fair';
                    text = 'Password strength: Fair';
                    break;
                case 4:
                    width = '75%';
                    color = 'strength-good';
                    text = 'Password strength: Good';
                    break;
                default:
                    width = '100%';
                    color = 'strength-strong';
                    text = 'Password strength: Strong';
            }

            strengthBar.className = 'password-strength ' + color;
            strengthBar.style.width = width;
            strengthText.textContent = text;
            strengthText.className = strength > 3 ? 'form-text text-success' : 'form-text text-warning';

            // 同時檢查密碼匹配
            checkPasswordMatch();
        }

        // 檢查密碼是否匹配
        function checkPasswordMatch() {
            var newPassword = document.getElementById('newPassword').value;
            var confirmPassword = document.getElementById('confirmPassword').value;
            var matchRequirement = document.getElementById('matchRequirement');
            var matchText = document.getElementById('passwordMatchText');

            if (newPassword.length === 0 && confirmPassword.length === 0) {
                updateRequirementIcon(matchRequirement, false);
                matchText.textContent = '';
                return;
            }

            if (newPassword === confirmPassword && newPassword.length >= 6) {
                updateRequirementIcon(matchRequirement, true);
                matchText.textContent = 'Passwords match';
                matchText.className = 'form-text text-success';
            } else {
                updateRequirementIcon(matchRequirement, false);
                matchText.textContent = 'Passwords do not match';
                matchText.className = 'form-text text-danger';
            }
        }

        // 更新要求圖標
        function updateRequirementIcon(element, isValid) {
            var icon = element.querySelector('.fas');
            if (isValid) {
                element.classList.remove('text-muted');
                element.classList.add('text-success');
                icon.classList.remove('fa-square');
                icon.classList.add('fa-check-square');
            } else {
                element.classList.remove('text-success');
                element.classList.add('text-muted');
                icon.classList.remove('fa-check-square');
                icon.classList.add('fa-square');
            }
        }

        // 表單提交前驗證
        function validateForm() {
            var currentPassword = document.getElementById('currentPassword').value;
            var newPassword = document.getElementById('newPassword').value;
            var confirmPassword = document.getElementById('confirmPassword').value;

            // 檢查必填字段
            if (!currentPassword) {
                alert('Please enter your current password');
                return false;
            }

            if (!newPassword) {
                alert('Please enter a new password');
                return false;
            }

            if (!confirmPassword) {
                alert('Please confirm your new password');
                return false;
            }

            // 檢查密碼長度
            if (newPassword.length < 6) {
                alert('New password must be at least 6 characters long');
                return false;
            }

            // 檢查密碼匹配
            if (newPassword !== confirmPassword) {
                alert('New password and confirmation password do not match');
                return false;
            }

            return true;
        }

        // 頁面加載完成後初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 初始檢查
            checkPasswordStrength();
            checkPasswordMatch();
        });
    </script>

</body>
</html>