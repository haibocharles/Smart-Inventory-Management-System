@model Change_Password
@{
    ViewData["Title"] = "Change Password";
}
<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Change Password - Inventory System</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin-top: 20px;
        }

        .password-icon {
            font-size: 80px;
            color: #337ab7;
            margin-bottom: 20px;
        }

        .form-horizontal .control-label {
            text-align: left;
        }

        .password-requirements {
            margin-top: 20px;
            padding: 15px;
            background-color: #f9f9f9;
            border-radius: 5px;
            border-left: 4px solid #337ab7;
        }

        .requirement-item {
            margin-bottom: 5px;
        }

        .password-strength {
            margin-top: 5px;
            height: 5px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .strength-weak {
            background-color: #d9534f;
            width: 25%;
        }

        .strength-fair {
            background-color: #f0ad4e;
            width: 50%;
        }

        .strength-good {
            background-color: #5bc0de;
            width: 75%;
        }

        .strength-strong {
            background-color: #5cb85c;
            width: 100%;
        }
    </style>
</head>
<body>

    <div class="container bootstrap snippets bootdey">
        <h1 class="text-primary">Change Password</h1>
        <hr>
        <div class="row">
            <div class="col-md-3">
                <div class="text-center">
                    <!-- 密碼圖標 -->
                    <div class="password-icon">
                        <i class="glyphicon glyphicon-lock"></i>
                    </div>
                    <h4>Password Security</h4>
                    <p class="text-muted">Keep your account secure with a strong password</p>
                </div>
            </div>

            <div class="col-md-9 personal-info">
                <!-- 顯示成功/錯誤消息 -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>Success!</strong> @TempData["SuccessMessage"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>Error!</strong> @TempData["ErrorMessage"]
                    </div>
                }

                <h3>Change Your Password</h3>

                <form class="form-horizontal" role="form" method="post" asp-action="Change_Password" asp-controller="Account" onsubmit="return validateForm()">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Current Password:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="password" asp-for="CurrentPassword" placeholder="Enter your current password" id="currentPassword">
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">New Password:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="password" asp-for="NewPassword" placeholder="Enter your new password" id="newPassword" oninput="checkPasswordStrength()">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <!-- 密碼強度指示器 -->
                            <div class="password-strength" id="passwordStrength"></div>
                            <small class="form-text text-muted" id="passwordStrengthText"></small>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Confirm Password:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="Confirm your new password" id="confirmPassword" oninput="checkPasswordMatch()">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <small class="form-text text-muted" id="passwordMatchText"></small>
                        </div>
                    </div>

                    <!-- 密碼要求提示 -->
                    <div class="password-requirements">
                        <h5>Password Requirements:</h5>
                        <ul class="list-unstyled">
                            <li class="requirement-item">
                                <span id="lengthRequirement" class="text-muted">
                                    <span class="glyphicon glyphicon-unchecked"></span> At least 6 characters
                                </span>
                            </li>
                            <li class="requirement-item">
                                <span id="matchRequirement" class="text-muted">
                                    <span class="glyphicon glyphicon-unchecked"></span> Passwords must match
                                </span>
                            </li>
                        </ul>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-primary">Update Password</button>
                            <button type="button" class="btn btn-default" onclick="goBack()">Back to Home Page</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

    <script>
        function goBack() {
            window.location.href = '/Home/Index';
        }

        // 檢查密碼強度
        function checkPasswordStrength() {
            var password = document.getElementById('newPassword').value;
            var strengthBar = document.getElementById('passwordStrength');
            var strengthText = document.getElementById('passwordStrengthText');
            var lengthRequirement = document.getElementById('lengthRequirement');

            let strength = 0;
            let text = '';
            let color = '';
            let width = '0%';

            if (password.length === 0) {
                strengthBar.className = 'password-strength';
                strengthBar.style.width = '0%';
                strengthText.textContent = '';
                updateRequirementIcon(lengthRequirement, false);
                return;
            }

            // 檢查密碼長度
            if (password.length >= 6) {
                strength++;
                updateRequirementIcon(lengthRequirement, true);
            } else {
                updateRequirementIcon(lengthRequirement, false);
            }

            if (password.length >= 8) strength++;

            // 檢查包含數字
            if (/\d/.test(password)) strength++;

            // 檢查包含小寫和大寫字母
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;

            // 檢查包含特殊字符
            if (/[^a-zA-Z0-9]/.test(password)) strength++;

            // 根據強度設置顯示
            switch(strength) {
                case 0:
                case 1:
                    width = '25%';
                    color = 'strength-weak';
                    text = 'Password strength: Weak';
                    break;
                case 2:
                case 3:
                    width = '50%';
                    color = 'strength-fair';
                    text = 'Password strength: Fair';
                    break;
                case 4:
                    width = '75%';
                    color = 'strength-good';
                    text = 'Password strength: Good';
                    break;
                default:
                    width = '100%';
                    color = 'strength-strong';
                    text = 'Password strength: Strong';
            }

            strengthBar.className = 'password-strength ' + color;
            strengthBar.style.width = width;
            strengthText.textContent = text;
            strengthText.className = strength > 3 ? 'form-text text-success' : 'form-text text-warning';

            // 同時檢查密碼匹配
            checkPasswordMatch();
        }

        // 檢查密碼是否匹配
        function checkPasswordMatch() {
            var newPassword = document.getElementById('newPassword').value;
            var confirmPassword = document.getElementById('confirmPassword').value;
            var matchRequirement = document.getElementById('matchRequirement');
            var matchText = document.getElementById('passwordMatchText');

            if (newPassword.length === 0 && confirmPassword.length === 0) {
                updateRequirementIcon(matchRequirement, false);
                matchText.textContent = '';
                return;
            }

            if (newPassword === confirmPassword && newPassword.length >= 6) {
                updateRequirementIcon(matchRequirement, true);
                matchText.textContent = 'Passwords match';
                matchText.className = 'form-text text-success';
            } else {
                updateRequirementIcon(matchRequirement, false);
                matchText.textContent = 'Passwords do not match';
                matchText.className = 'form-text text-danger';
            }
        }

        // 更新要求圖標
        function updateRequirementIcon(element, isValid) {
            var icon = element.querySelector('.glyphicon');
            if (isValid) {
                element.classList.remove('text-muted');
                element.classList.add('text-success');
                icon.classList.remove('glyphicon-unchecked');
                icon.classList.add('glyphicon-ok');
            } else {
                element.classList.remove('text-success');
                element.classList.add('text-muted');
                icon.classList.remove('glyphicon-ok');
                icon.classList.add('glyphicon-unchecked');
            }
        }

        // 表單提交前驗證
        function validateForm() {
            var currentPassword = document.getElementById('currentPassword').value;
            var newPassword = document.getElementById('newPassword').value;
            var confirmPassword = document.getElementById('confirmPassword').value;

            // 檢查必填字段
            if (!currentPassword) {
                alert('Please enter your current password');
                return false;
            }

            if (!newPassword) {
                alert('Please enter a new password');
                return false;
            }

            if (!confirmPassword) {
                alert('Please confirm your new password');
                return false;
            }

            // 檢查密碼長度
            if (newPassword.length < 6) {
                alert('New password must be at least 6 characters long');
                return false;
            }

            // 檢查密碼匹配
            if (newPassword !== confirmPassword) {
                alert('New password and confirmation password do not match');
                return false;
            }

            return true;
        }

        // 頁面加載完成後初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 初始檢查
            checkPasswordStrength();
            checkPasswordMatch();
        });
    </script>

</body>
</html>