<!-- 路径：LHP_Inventory_management_system_MVC/Views/Account/Login.cshtml -->
@{
    ViewData["Title"] = "User Login - SmartStock Management System";
}

<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
          crossorigin="anonymous">

    <!-- Font Awesome图标库 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          rel="stylesheet"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous">

    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">
                            <i class="fas fa-sign-in-alt"></i> Inventory Management System - Login
                        </h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" method="post" id="loginForm">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label for="Username" class="form-label">username</label>
                                <input type="text"
                                       class="form-control @(ViewData.ModelState.ContainsKey("Username") ? "is-invalid" : "")"
                                       id="Username"
                                       name="Username"
                                       placeholder="Please input the username"
                                       required>
                                <div class="invalid-feedback">
                                    @Html.ValidationMessage("Username")
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="Password" class="form-label">Password</label>
                                <input type="password"
                                       class="form-control @(ViewData.ModelState.ContainsKey("Password") ? "is-invalid" : "")"
                                       id="Password"
                                       name="Password"
                                       placeholder="Please input the password"
                                       required>
                                <div class="invalid-feedback">
                                    @Html.ValidationMessage("Password")
                                </div>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox"
                                       class="form-check-input"
                                       id="RememberMe"
                                       name="RememberMe">
                                <label class="form-check-label" for="RememberMe">
                                    Remember Me 
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </button>

                            <div class="mt-3 text-center">
                                <small>
                                    <a href="#">Forgot Password？</a> |
                                    <a asp-action="Register" asp-controller="Account">Register</a>
                                </small>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 前端验证脚本 -->
    <script>
        // 表单提交前验证
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            var username = document.getElementById('Username').value;
            var password = document.getElementById('Password').value;

            // 简单的前端验证
            if (username.trim() === '') {
                e.preventDefault();
                alert('用户名不能为空！');
                return;
            }

            if (password.trim() === '') {
                e.preventDefault();
                alert('密码不能为空！');
                return;
            }

            // 可以添加更多验证规则
            if (password.length < 6) {
                e.preventDefault();
                alert('密码长度不能少于6位！');
                return;
            }
        });
    </script>

    <!-- 错误提示处理（如果有） -->
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            alert('@TempData["ErrorMessage"]');
        </script>
    }

    <!-- Bootstrap JavaScript Bundle (包含Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y"
            crossorigin="anonymous"></script>
</body>
</html>